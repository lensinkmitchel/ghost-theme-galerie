{{!--
  This template renders the navigation menus.
--}}

{{#if isSecondary}}
  {{#foreach navigation}}
    <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}">
      <a href="{{url absolute="true"}}">
        {{label}}
      </a>
    </li>
  {{/foreach}}
{{else}}
  {{#foreach navigation}}
    <li>
      <a
        href="{{url absolute="true"}}"
        class="nav-{{slug}}{{#if current}} nav-current{{/if}}"
      >
        {{label}}
      </a>
    </li>
  {{/foreach}}
{{/if}}
